    <LinearLayout
        android:id="@+id/layout4"
        android:layout_below="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

    <Spinner
        android:id="@+id/RelationshipApplicant"
        android:layout_weight="1"
        android:hint="Select Relationship"
        android:entries="@array/array_relationship"
        android:layout_marginTop="@dimen/form_field_between_margin"
        style="@style/spinnerstyle"
        android:layout_marginRight="@dimen/defaultspacebetweentwoview"
         />

        <Spinner
            android:id="@+id/TypeOfApplicant"
            android:layout_weight="1"
            style="@style/spinnerstyle"
            android:hint="@string/typeofemployee"
            android:entries="@array/array_typeofemployee"
            android:layout_marginTop="@dimen/form_field_between_margin"
            android:layout_marginLeft="@dimen/defaultspacebetweentwoview"

            />

</LinearLayout>

    <LinearLayout
        android:id="@+id/layout5"
        android:layout_below="@+id/layout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/coApplicantincome"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/form_field_between_margin"
        android:layout_marginRight="@dimen/defaultspacebetweentwoview">

        <EditText

            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Co-Applicant Income(Monthly)"
            style="@style/edittextstyle"
            android:singleLine="true" />

    </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/CoApplicantExpense"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/defaultspacebetweentwoview"
            android:layout_marginTop="@dimen/form_field_between_margin">

            <EditText

                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Co-Applicant Expense(Monthly)"
                style="@style/edittextstyle"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>



    </LinearLayout>

