<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:id="@+id/layout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="2">

        <Spinner
            android:id="@+id/ApplicantTitle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Select title"
            android:layout_marginTop="@dimen/form_field_between_margin"
            android:textColorHint="#05ab9a"
            android:entries="@array/array_title"
            />
</LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_below="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/FirstNameApplicant"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/form_field_between_margin">

        <EditText

            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/firstname"
            android:textColorLink="@color/colorPrimary" />

    </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout3"
        android:layout_below="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

  <android.support.design.widget.TextInputLayout
        android:id="@+id/LastNameApplicant"
android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/form_field_between_margin">

        <EditText

            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/lastname"
            android:textColorLink="@color/colorPrimary"
            android:singleLine="true" />

    </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout4"
        android:layout_below="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

    <Spinner
        android:id="@+id/RelationshipApplicant"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:hint="Select Relationship"
        android:entries="@array/array_relationship"
        android:layout_marginTop="@dimen/form_field_between_margin"
        android:textColorHint="#05ab9a"
         />

</LinearLayout>

    <LinearLayout
        android:id="@+id/layout5"
        android:layout_below="@+id/layout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/coApplicantincome"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/form_field_between_margin">

        <EditText

            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Co-Applicant Income(Monthly)"
            android:textColorLink="@color/colorPrimary"
            android:singleLine="true" />

    </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout6"
        android:layout_below="@+id/layout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
    <android.support.design.widget.TextInputLayout
        android:id="@+id/CoApplicantExpense"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/form_field_between_margin">

        <EditText

            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Co-Applicant Expense(Monthly)"
            android:textColorLink="@color/colorPrimary"
            android:singleLine="true" />

    </android.support.design.widget.TextInputLayout>


</LinearLayout>



    <LinearLayout
        android:id="@+id/layout7"
        android:layout_below="@+id/layout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
    <Spinner
        android:id="@+id/TypeOfApplicant"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:hint="@string/typeofemployee"
        android:entries="@array/array_typeofemployee"
        android:layout_marginTop="@dimen/form_field_between_margin"
        android:textColorHint="#05ab9a"
        />
</LinearLayout>
