<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/default_space_between_listview"
        android:paddingBottom="@dimen/default_space_between_listview"
        android:weightSum="2">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Loan Id"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="@dimen/default_padding_top"
            android:layout_marginLeft="@dimen/default_padding_top"
            android:textSize="@dimen/view_leads_size"/>

        <TextView
            android:id="@+id/loanid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Default Text"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/default_padding_top"
            android:layout_marginLeft="@dimen/default_padding_top"
            android:textSize="@dimen/view_leads_size"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc" />



            <Button
                android:id="@+id/VerifyAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/default_padding_top"
                android:layout_marginLeft="@dimen/default_padding_top"
                android:text="Verify Address"
                android:textSize="@dimen/view_leads_size"/>

    <ExpandableListView
        android:id="@+id/verification"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" >
    </ExpandableListView>

    </LinearLayout>




